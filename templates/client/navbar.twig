{% macro navItem(text, href) %}
  <li class="navbar-item">
    <a class="navbar-link" href="{{ href }}">{{ text }}</a>
  </li>
{% endmacro %}
{% import _self as nav %}

<!-- Navbar -->
<nav class="navbar navbar-expand-xl navbar-togglable fixed-top
  {{ navbarDark ? 'navbar-dark' : 'navbar-fixed-top' }}
  ">
  <div class="container p-2">
    <div class="navbar-brand">
      <a href="index">
        <img src="images/logo.png" class="d-inline-block align-top" alt="HostelR" style="width: 3em;">
      </a>
    </div>
    <div class="navbar-collapse">
      <ul class="navbar-nav ml-auto">
        {% block navItems %}
          {{ nav.navItem('In√≠cio', './')}}
          {% if loggedIn %}
            {% if curPage == 'list' %}
              {{ nav.navItem('Reservas', 'reserved') }}
            {% elseif curPage == 'reserved' %}
              {{ nav.navItem('Hosteis', 'list') }}
            {% else %}
              {{ nav.navItem('Hosteis', 'list') }}
              {{ nav.navItem('Reservas', 'reserved') }}
            {% endif %}
            {{ nav.navItem('Sair', 'logout') }}
          {% endif %}
        {% endblock %}
    </ul>
  </div>
</div>
</nav>
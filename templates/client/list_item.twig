<div class="col-lg-4 col-sm-6">
  <div class="card mb-4">
    <div class="card-body" {% if disabled %} style="opacity: 0.5" {% endif %}>
      <img class="card-img-top mb-3" alt="{{ hostelAddress }}" src="{{ hostelImageUrl }}">
      <p class="card-text mb-0">{{ hostelAddress }}</p>
      {% block cardBody %}
        <p class="card-text text-muted">
          {% if disabled %}
            Indisponível.
          {% else %}
            {{ hostelRooms }}
            quartos disponíveis.
          {% endif %}
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a type="button" class="btn btn-sm btn-primary
            {% if disabled %}
            disabled
            {% endif %}" href="details?id={{ hostelId }}">Mais &raquo</a>
          </div>
          <small class="text-muted">
            Preço por quarto: €{{ hostelPrice }}.
          </small>
        </div>
      {% endblock %}
    </div>
  </div>
</div>